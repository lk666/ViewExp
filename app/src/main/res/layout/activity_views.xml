<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            tools:context="lk.cn.com.newbanner.views.ViewsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="32dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/like"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="点击效果"
            android:textColor="@color/c_green"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv8"/>

        <Button
            android:id="@+id/tv81"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_view_4_state"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="常用三状态按钮"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv8"/>

        <Button
            android:id="@+id/tv82"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            android:clickable="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_ripple"
            android:elevation="8dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:padding="8dp"
            android:text="自定义ripple涟漪效果按钮"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toStartOf="@+id/gl1"
            app:layout_constraintTop_toBottomOf="@+id/tv8"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="透明、模糊"
            android:textColor="@color/c_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv81"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@color/c_pink"
            android:gravity="center"
            android:padding="8dp"
            android:text="底部元素"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv71"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv71"/>

        <TextView
            android:id="@+id/tv71"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="#9900ace2"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="透明度换算：\n100% — FF\n90% — E6\n80% — CC\n70% — B3\n60% — 99\n50% — 80\n40% — 66\n30% — 4D\n20% — 33\n10% — 1A\n0% — 00"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv6"/>


        <TextView
            android:id="@+id/tv72"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="高斯模糊，很耗性能，最好不要随意使用"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gl1"
            app:layout_constraintTop_toBottomOf="@+id/tv6"/>


        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="阴影"
            android:textColor="@color/c_pink"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv71"/>

        <TextView
            android:id="@+id/tv51"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_view_4"
            android:elevation="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="使用z轴实现，必须有背景,5.0以下不支持xml定义，阴影深浅与背景有关"
            android:textColor="@color/c_pink"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv5"/>

        <TextView
            android:id="@+id/tv52"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_pay_way"
            android:gravity="center"
            android:padding="8dp"
            android:text="使用.9图实现"
            android:textColor="@color/c_pink"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toStartOf="@+id/gl1"
            app:layout_constraintTop_toBottomOf="@+id/tv5"/>

        <TextView
            android:id="@+id/tv53"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_view_g_4"
            android:gravity="center"
            android:padding="8dp"
            android:text="使用xml绘制"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gl2"
            app:layout_constraintTop_toBottomOf="@+id/tv5"/>

        <lk.cn.com.newbanner.views.ShadowTextView
            android:id="@+id/tv61"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="使用自定义控件，绘制自定义颜色的阴影"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv51"/>

        <TextView
            android:id="@+id/tv62"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:background="@drawable/round"
            android:elevation="10dp"
            android:gravity="center"
            android:outlineProvider="background"
            android:padding="8dp"
            android:text="圆形阴影"
            android:textColor="@color/c_pink"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv61"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toStartOf="@+id/gl1"
            app:layout_constraintTop_toTopOf="@+id/tv61"/>

        <!--设置背景后,EditText的那条线就会消失.-->
        <EditText
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#e5e5e5"
            android:hint="say soming"
            android:imeOptions="flagNoFullscreen|flagNoExtractUi"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv61"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:background="#00ace2"
            android:text="默认:จัดตั้งขึ้น اغคง"
            android:textColor="#fff"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>

        <!--layout_height="0dp" app:layout_constraintDimensionRatio="1:1"-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#00ace2"
            android:includeFontPadding="false"
            android:text="去除边距:จัดตั้งขึ้น اغคง"
            android:textColor="#fff"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>


        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/c_green"
            android:text="32dp"
            android:textColor="#fff"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"/>

        <View
            android:layout_width="6dp"
            android:layout_height="32dp"
            android:background="#fd497c"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"/>

        <!--layout_height="0dp" app:layout_constraintDimensionRatio="1:1"-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/c_green"
            android:text="32sp"
            android:textColor="#fff"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <!--grid排列-->
        <android.support.constraint.Guideline
            android:id="@+id/gl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.666666666"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.333333333"/>

        <android.support.constraint.Barrier
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv1,tv2,tv3"/>

        <android.support.constraint.Barrier
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="tv11,tv12,tv13"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="32dp"
            android:background="@color/c_pink"
            android:scaleType="center"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/c_pink"
            android:scaleType="centerCrop"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toEndOf="@+id/gl1"
            app:layout_constraintTop_toTopOf="@+id/iv1"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_pink"
            android:scaleType="centerInside"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl2"
            app:layout_constraintTop_toTopOf="@+id/iv2"/>

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/c_pink"
            android:scaleType="fitXY"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b1"/>


        <ImageView
            android:id="@+id/iv12"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/c_pink"
            android:scaleType="fitStart"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toEndOf="@+id/gl1"
            app:layout_constraintTop_toTopOf="@+id/iv11"/>


        <ImageView
            android:id="@+id/iv13"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_pink"
            android:scaleType="fitEnd"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl2"
            app:layout_constraintTop_toTopOf="@+id/iv12"/>

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/c_pink"
            android:scaleType="fitCenter"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b11"/>

        <ImageView
            android:id="@+id/iv22"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/c_pink"
            android:scaleType="matrix"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="@+id/gl2"
            app:layout_constraintStart_toEndOf="@+id/gl1"
            app:layout_constraintTop_toTopOf="@+id/iv21"/>

        <ImageView
            android:id="@+id/iv23"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_pink"
            android:src="@mipmap/ysl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gl2"
            app:layout_constraintTop_toTopOf="@+id/iv22"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="center，原始大小，截取中间部分"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv1"
            app:layout_constraintStart_toStartOf="@+id/iv1"
            app:layout_constraintTop_toBottomOf="@+id/iv1"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="centerCrop，等比例缩放，短边与ImageView的边长度相同"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv2"
            app:layout_constraintStart_toStartOf="@+id/iv2"
            app:layout_constraintTop_toBottomOf="@+id/iv2"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="centerInside，等比缩小（小于ImageView的图片不变），全图居中显示"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv3"
            app:layout_constraintStart_toStartOf="@+id/iv3"
            app:layout_constraintTop_toBottomOf="@+id/iv3"/>

        <TextView
            android:id="@+id/tv11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="fitXY，不保持比例填充"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv11"
            app:layout_constraintStart_toStartOf="@+id/iv11"
            app:layout_constraintTop_toBottomOf="@+id/iv11"/>

        <TextView
            android:id="@+id/tv12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="fitStart，缩放方式同fitCenter，只是将图片显示在左方或上方"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv12"
            app:layout_constraintStart_toStartOf="@+id/iv12"
            app:layout_constraintTop_toBottomOf="@+id/iv12"/>

        <TextView
            android:id="@+id/tv13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="fitEnd，缩放方式同fitCenter，只是将图片显示在右方或下方"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv13"
            app:layout_constraintStart_toStartOf="@+id/iv13"
            app:layout_constraintTop_toBottomOf="@+id/iv13"/>


        <TextView
            android:id="@+id/tv21"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="fitCenter，等比例缩放，使整幅图能够居中显示在ImageView中"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv21"
            app:layout_constraintStart_toStartOf="@+id/iv21"
            app:layout_constraintTop_toBottomOf="@+id/iv21"/>

        <TextView
            android:id="@+id/tv22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="matrix，保持原图，从左上角开始绘制"
            android:textColor="@color/c_green"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv22"
            app:layout_constraintStart_toStartOf="@+id/iv22"
            app:layout_constraintTop_toBottomOf="@+id/iv22"/>

